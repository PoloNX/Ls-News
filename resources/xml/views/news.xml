<brls:Box
    width="auto"
    height="auto"
     >

    <brls:ScrollingFrame 
        width="100%"
        height="100%"
        grow="1.0" >
                
        <brls:Box
            width="auto"
            height="auto"
            axis="column"

            paddingLeft="@style/brls/tab_frame/content_padding_sides"
            paddingRight="@style/brls/tab_frame/content_padding_sides"
            paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
            paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">


            <brls:Box
                width="auto"
                height="auto"
                axis="column" >                
                <brls:Image
                    id="image"
                    width="auto"
                    height="auto"
                    marginBottom="10px" />

                <brls:Label
                    id="content"
                    width="auto"
                    height="auto"
                    marginBottom="10px" />

            </brls:Box>

            <brls:Box
                width="auto"
                height="50%"
                axis="row">
            
                <brls:Image
                    id="image_content"
                    width="auto"
                    height="auto"
                    marginBottom="10px" />

                <brls:Image
                    id="image_content2"
                    width="auto"
                    height="auto"
                    marginBottom="10px" />

                <brls:Image
                    id="image_content3"
                    width="auto"
                    height="auto"
                    marginBottom="10px" />

            </brls:Box>
        </brls:Box>


    </brls:ScrollingFrame>

</brls:Box>